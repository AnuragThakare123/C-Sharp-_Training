using System;
using System.Threading.Tasks;

class Program
{
    static async Task DownloadFileAsync()
    {
        Console.WriteLine("just 2 min, Downloading file...");
        await Task.Delay(5000); 
        Console.WriteLine("Bro Done!,Download complete!");
    }

    static async Task Main(string[] args)
    {
        Console.WriteLine("Wait Anurag!,I'm Starting program...");

        await DownloadFileAsync();

        Console.WriteLine("Thanks!,Program finished.");
    }
}
